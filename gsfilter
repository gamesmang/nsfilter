	Class "Gloves" "Boots" "Body Armour" "Shields"
	LinkedSockets >= 3
	ItemLevel <= 25
	Rarity Normal
	SetTextColor 255 255 255 255
	SetFontSize 36

Show
	Class "Gloves" "Boots" "Body Armour" "Shields"
	LinkedSockets >= 3
	ItemLevel <= 25
	Rarity Magic
	SetTextColor 100 100 255
	SetFontSize 36

